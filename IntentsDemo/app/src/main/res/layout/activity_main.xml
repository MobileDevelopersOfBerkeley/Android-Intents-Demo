<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start activity"
        android:id="@+id/startActivityButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get photos"
        android:id="@+id/getPhotosButton"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/startActivityButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Maps"
        android:id="@+id/openMapsButton"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/getPhotosButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/startActivityButton"
        android:layout_toRightOf="@+id/startActivityButton"
        android:layout_toEndOf="@+id/startActivityButton"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/openMapsButton"
        android:layout_toRightOf="@+id/startActivityButton"
        android:layout_toEndOf="@+id/startActivityButton" />

</RelativeLayout>
